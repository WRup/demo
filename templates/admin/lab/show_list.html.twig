{% extends 'admin/layout.html.twig' %}

{% block body_id 'admin_post_show' %}

{% set lp = 1 %}
{% block main %}
    <h1>{{ 'title.post_list'|trans }}</h1>

    <table class="table table-striped table-middle-aligned">
        <thead>
        <tr>
            <th scope="col">{{ 'label.title'|trans }}</th>
            <th scope="col">{{ 'label.number'|trans }}</th>
            <th scope="col" class="text-center"><i class="fa fa-archive"
                                                   aria-hidden="true"></i> {{ 'label.user'|trans }}</th>
            <th scope="col" class="text-right"><i class="fa fa-cogs" aria-hidden="true"></i> {{ 'label.actions'|trans }}
            </th>
        </tr>
        </thead>
        <tbody>
        {% for loan in accessory.loans %}
            <tr>
                <td>{{ accessory.name }}</td>
                <td>{{ lp }}</td>
                <td class="text-center">
                    <select id="user-select" class="form-select" aria-label="User select"
                            onchange="updateLoan(this, {{ loan.id }}, '{{ 'action.save'|trans }}' )">
                        {% for user in users %}
                            <option value="{{ user.id }}"
                                    {% if user.id == loan.user.id %}selected{% endif %}>{{ user.fullName }}</option>
                        {% endfor %}
                        <option value="-1"></option>
                    </select>
                </td>
                <td class="text-right">
                    <div class="item-actions" style="display: flex; float: right">
                        <div id="row-{{ loan.id }}"></div>
                        {{ include('admin/lab/_delete_loaned_form.html.twig', {loan: loan}, with_context = false) }}
                    </div>
                </td>
            </tr>
            {% set lp = lp + 1 %}
        {% endfor %}
        {% set freeAccessories = (accessory.quantity - accessory.loans|length) %}
        {% if freeAccessories != 0 %}
            {% for i in range(1, freeAccessories) %}
                <tr>
                    <td>{{ accessory.name }}</td>
                    <td>{{ lp }}</td>
                    <td class="text-center">
                        <select class="form-select" aria-label="User select"
                                onchange="createLoan(this, {{ accessory.id }}, {{ i }}, '{{ 'action.save'|trans }}' )">
                            {% for user in users %}
                                <option value="{{ user.id }}">{{ user.fullName }}</option>
                            {% endfor %}
                            <option value="-1" selected></option>
                        </select>
                    </td>
                    <td class="text-right">
                        <div class="item-actions" style="display: flex; float: right">
                            {# <a href="{{ path('admin_post_show', {id: accessory.id}) }}" class="btn btn-sm btn-default"> #}
                            {# <i class="fa fa-eye" aria-hidden="true"></i> {{ 'action.show'|trans }} #}
                            {# </a> #}
                            <div id="create-row-{{ i }}"></div>
                            {{ include('admin/lab/_delete_free_form.html.twig', {accessory: accessory}, with_context = false) }}
                        </div>
                    </td>
                </tr>
                {% set lp = lp + 1 %}
            {% else %}
                <tr>
                    <td colspan="4" align="center">{{ 'post.no_posts_found'|trans }}</td>
                </tr>
            {% endfor %}
        {% endif %}
        </tbody>
    </table>
    <div class="section actions">
        <a href="{{ path('lab_admin_post_add', {id: accessory.id}) }}" class="btn btn-lg btn-block btn-success">
            <i class="fa fa-plus" aria-hidden="true"></i> {{ 'action.create_post'|trans }}
        </a>
    </div>
    {% block javascripts %}
        {{ parent() }}
        <script>
            function updateLoan(event, loanId, buttonName) {
                const elementById = document.getElementById("row-" + loanId);
                elementById.innerHTML = '';

                const f = document.createElement("form");
                f.setAttribute('id', "delete-form")
                f.setAttribute('method', "post");
                f.setAttribute('action', "loan/" + loanId + "/user/" + event.value + "/update");
                f.style.marginRight = "5px";

                const i = document.createElement("button");
                i.setAttribute('type', "submit");
                i.setAttribute('class', "btn btn-sm btn-block btn-info");

                const s = document.createElement("i");
                s.setAttribute('class', "fa fa-floppy-o");
                s.setAttribute('aria-hidden', "true");

                i.appendChild(s);
                i.appendChild(document.createTextNode(buttonName));
                f.appendChild(i);
                elementById.appendChild(f);

            }

            function createLoan(event, accessoryId, id, buttonName) {
                const elementById = document.getElementById("create-row-" + id);
                elementById.innerHTML = '';

                const f = document.createElement("form");
                f.setAttribute('id', "delete-form")
                f.setAttribute('method', "post");
                f.setAttribute('action', "accessory/" + accessoryId + "/user/" + event.value + "/create");
                f.style.marginRight = "5px";

                const i = document.createElement("button");
                i.setAttribute('type', "submit");
                i.setAttribute('class', "btn btn-sm btn-block btn-info");

                const s = document.createElement("i");
                s.setAttribute('class', "fa fa-floppy-o");
                s.setAttribute('aria-hidden', "true");

                i.appendChild(s);
                i.appendChild(document.createTextNode(buttonName));
                f.appendChild(i);
                elementById.appendChild(f);

            }
        </script>
