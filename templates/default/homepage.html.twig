{% extends 'base.html.twig' %}

{% block body_id 'homepage' %}

{#
    the homepage is a special page which displays neither a header nor a footer.
    this is done with the 'trick' of defining empty Twig blocks without any content
#}
{#{% block header %}{% endblock %}#}
{% block footer %}{% endblock %}

{% block body %}
    <div class="page-header">
        <h1>{{ 'menu.admin'|trans|raw }}</h1>
    </div>

    <div class="row">
        <div class="col-sm-6">
            <div class="jumbotron">
                <p>
                    {{ 'help.manage_lab'|trans|raw }}
                </p>
                <p>
                    <a class="btn btn-primary btn-lg" href="{{ path('lab_admin_index') }}">
                        <i class="fa fa-flask" aria-hidden="true"></i> {{ 'action.manage_lab'|trans }}
                    </a>
                </p>
            </div>
        </div>

        <div class="col-sm-6">
            <div class="jumbotron">
                <p>
                    {{ 'help.manage_users'|trans|raw }}
                </p>
                <p>
                    <a class="btn btn-primary btn-lg" href="{{ path('lab_admin_users') }}">
                        <i class="fa fa-users" aria-hidden="true"></i> {{ 'action.manage_users'|trans }}
                    </a>
                </p>
            </div>
        </div>
    </div>
{% endblock %}
