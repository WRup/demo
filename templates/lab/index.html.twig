{% extends 'base.html.twig' %}

{% block body_id 'lab_index' %}

{% block main %}
    {% for accessory in paginator.results %}
        <article class="accessory">
            <img class ="accessory_img" src="{{ asset('uploads/images/' ~ accessory.image) }}" alt="Missing image. Source url:{{ accessory.image }}"/>
            <div class="post">
                <h2>
                    <a href="{{ accessory.url }}">
                        {{ accessory.name }}
                    </a>
                </h2>

                <p class="post-metadata">
                    <span class="metadata"><i class="fa fa-address-card"></i> {{ accessory.manufacturer }}</span>
                    <span class="metadata"><i class="fa fa-barcode"></i> {{ accessory.model }}</span>
                </p>

                <p>{{ accessory.content }}</p>

                {{ include('lab/_post_tags.html.twig') }}
            </div>
        </article>
    {% else %}
        <div class="well">{{ 'accessory.no_accessories_found'|trans }}</div>
    {% endfor %}

    {% if paginator.hasToPaginate %}
        <div class="navigation text-center">
            <ul class="pagination">
                {% if paginator.hasPreviousPage %}
                    <li class="prev"><a
                                href="{{ path('lab_index_paginated', {page: paginator.previousPage, tag: tagName}) }}"
                                rel="previous"><i class="fa fw fa-long-arrow-left"></i> {{ 'paginator.previous'|trans }}
                        </a></li>
                {% else %}
                    <li class="prev disabled"><span><i class="fa fw fa-arrow-left"></i> {{ 'paginator.previous'|trans }}</span>
                    </li>
                {% endif %}

                {% for i in 1..paginator.lastPage %}
                    {% if i == paginator.currentPage %}
                        <li class="active"><span>{{ i }} <span
                                        class="sr-only">{{ 'paginator.current'|trans }}</span></span></li>
                    {% else %}
                        <li><a href="{{ path('lab_index_paginated', {page: i, tag: tagName}) }}">{{ i }}</a></li>
                    {% endif %}
                {% endfor %}

                {% if paginator.hasNextPage %}
                    <li class="next"><a
                                href="{{ path('lab_index_paginated', {page: paginator.nextPage, tag: tagName}) }}"
                                rel="next">{{ 'paginator.next'|trans }} <i class="fa fw fa-arrow-right"></i></a></li>
                {% else %}
                    <li class="next disabled"><span>{{ 'paginator.next'|trans }} <i
                                    class="fa fw fa-arrow-right"></i></span></li>
                {% endif %}
            </ul>
        </div>
    {% endif %}
{% endblock %}

{% block sidebar %}
    {{ parent() }}


    {{ include('lab/_rss.html.twig') }}
{% endblock %}
